<div class="main-con container">
    <div class="row">
        <div class="col-sm-4">
            <div class="panel panel-default flat" style="margin-bottom: 30px;">
                <div class="panel-body">
                    <p><a href="/main" class="active"> View Details </a></p>
                    <p><a href="/print"> Print Card </a></p>
                    <p><a href="/settings"> Settings </a></p>
                </div>
            </div>

            <div class="panel panel-default flat">
                <div class="panel-body">
                    {{#if data.img}}
                        <img src="data:image/png;base64,{{data.img}}" alt="profile" id="profileImage" class="img img-responsive img-thumbnail img-flat"/>  
                    {{else}}
                        <img src="/images/avatar.png" alt="profile" id="profileImage" class="img img-responsive img-thumbnail img-flat"/>
                    {{/if}}   
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="panel panel-default flat">
                <div class="panel-body text-center">
                    <h3 style="margin-top:30px; margin-bottom:70px;"> Details </h3>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input type="text" Placeholder="Last Name" class="form-control" readonly="true" value="{{data.lname}}" />
                                </div>
                            </div>
                            
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input type="text" Placeholder="First Name" class="form-control" readonly="true" value="{{data.fname}}" />
                                </div>
                            </div>

                            <div class="divider"></div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input type="text" Placeholder="Last Name" class="form-control" readonly="true" value="{{data.state}}" />
                                </div>
                            </div>
                            
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input type="text" Placeholder="First Name" class="form-control" readonly="true" value="{{data.local}}" />
                                </div>
                            </div>

                            <div class="divider"></div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input type="text" placeholder="Date of Birth" class="form-control" value="{{data.dob}}" readonly="true"/>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input type="text" placeholder="Place of Birth" class="form-control" value="{{data.place}}" readonly="true" />
                                </div>
                            </div>

                        </div>                    
                </div>
            </div>
        </div>
    </div>
</div>